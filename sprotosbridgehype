    <script src="https://unpkg.com/@solana/spl-token@latest/lib/index.iife.js"></script>
    <style>
        .bridge-widget {
            background-color: #f0f0f0;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            max-width: 300px;
